<div class="chat">
    <div class="chat__messages">
        <ul class="chat__messages-list">
            <li class="chat__messages-item">
                <p class="chat__user-name"><strong>SS:</strong></p>
                <p class="chat__user-message">Test message</p>
                <time class="chat__user-message-time">16:00</time>
            </li>
             <li class="chat__messages-item">
                <p class="chat__user-name"><strong>AM:</strong></p>
                <p class="chat__user-message">Test message</p>
                <time class="chat__user-message-time">16:05</time>
            </li>
        </ul>
    </div>
    <form class="chat__form form-chat">
        <label class="form-chat__label">
            <input type="text"  name="message" class="form-chat__input" />
        </label>
        <button class="form-chat__submit-btn btn btn--form">Send</button>
    </form>
</div>